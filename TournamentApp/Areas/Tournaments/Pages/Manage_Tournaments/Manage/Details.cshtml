@page
@model TournamentApp.Areas.Tournaments.Pages.Manage_Tournaments.Manage_Teams.DetailsModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Tournaments/Pages/Manage_Tournaments/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Team</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Team.TeamName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Team.TeamName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Team.IsActive)
        </dt>
         <dd class="col-sm-10">
             @{var active = @Model.Team.IsActive ? "Active" : "Inactive";} @active
        </dd>
        <dd class="col-sm-2">
            @Html.DisplayNameFor(model => model.Team.TeamSize)
        </dd>
         <dd class="col-sm-10">
            @{var size = @Model.ParticipantDetails.Count() ;} @size
    </dl>
    <table class="table">
        <thead>
                <tr>
                <th>
                    @Html.DisplayNameFor(model=>model.ParticipantDetails[0].UserName)
                </th>
                <th>
                    @Html.DisplayNameFor(model=>model.ParticipantDetails[0].Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model=>model.ParticipantDetails[0].PariticpantRole)
                </th>
            </tr>
     </thead>
        <tbody>
    @foreach (var item in Model.ParticipantDetails) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                 <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                            @if (item.PariticpantRole == Role.admin) {
                                <text>Admin</text>
                            }else{ <text>Participant</text>}
                               
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>
<div>
    <a asp-page="./Index" asp-route-trId=@Model.TournamentId class="btn btn-secondary">Back to List</a>
</div>
