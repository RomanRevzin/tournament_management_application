@model TournamentApp.Areas.Tournaments.Pages.Manage_Tournaments.RemoveMatchModel
@{
        Layout = "./_Layout.cshtml";
        ViewData["Title"] = "RemoveMatch";
}
@{
    var tid = HttpContext.Request.Query["trId"];
}
<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Match</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.match.GameId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.match.GameId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.match.MatchDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.match.MatchDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.match.WinningTeam)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.match.WinningTeam)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="match.GameId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Matches/" asp-route-trId=@tid >Back to List</a>
    </form>
</div>